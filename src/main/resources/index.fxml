<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.lifay.lerverhc.view.IndexController">

    <top>
        <MenuBar>
            <menus>
                <Menu text="管理项">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#propertiesManage" text="属性管理" />
                        <MenuItem mnemonicParsing="false" onAction="#addrManage" text="地址管理" />
                    </items>
                </Menu>
                <Menu text="辅助工具">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#convertToJsonTool" text="数据转换json" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="主题">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#whiteTheme" text="白色" />
                        <MenuItem mnemonicParsing="false" onAction="#darkTheme" text="黑色" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox fx:id="leftPane" alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="8.0" right="2.0" />
            </padding>
           <children>
               <HBox alignment="CENTER">
                  <children>
                      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="15.0" prefWidth="83.0" text="Http树" textFill="#400404">
                          <font>
                              <Font size="14.0" />
                          </font>
                      </Label>
                      <ImageView fx:id="reloadHttpTreeImg" fitHeight="20.0" fitWidth="22.0" layoutX="20.0" layoutY="5.0" onMouseClicked="#reloadHttpTree" pickOnBounds="true" preserveRatio="true" />
                  </children>
               </HBox>
            <TextField fx:id="keywordField" />
               <TreeView fx:id="httpTreeView" prefHeight="634.0" prefWidth="305.0" VBox.vgrow="ALWAYS" />
           </children>
        </VBox>
    </left>
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS">
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin></TabPane>
    </center>
   <padding>
      <Insets right="2.0" />
   </padding>
</BorderPane>
