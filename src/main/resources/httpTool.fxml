                        prefWidth="120.0" style="-fx-text-fill:WHITE;-fx-background-color:#5264AE;-fx-font-size:14px;"
                        text="发送"/>
                <ChoiceBox fx:id="selectContentType" layoutX="591.0" layoutY="64.0" prefHeight="23.0"
                           prefWidth="197.0"/>
                <Label layoutX="507.0" layoutY="61.0" prefHeight="27.0" prefWidth="84.0" text="Content-Type:"/>
