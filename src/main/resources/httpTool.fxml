                <Button layoutX="73.0" layoutY="63.0" mnemonicParsing="false" onAction="#addHeader"
                        styleClass="btn-info" text="+"/>
                <Button layoutX="102.0" layoutY="63.0" mnemonicParsing="false" onAction="#delHeader"
                        styleClass="btn-danger" text="-"/>
                <Label layoutX="642.0" layoutY="160.0" prefHeight="22.0" prefWidth="35.0" text="耗时:"/>
                <Label fx:id="useTimeLabel" layoutX="677.0" layoutY="160.0" prefHeight="22.0" prefWidth="121.0"/>

            </children>
        </AnchorPane>

    </center>

</BorderPane>
