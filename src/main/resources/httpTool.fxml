                        onAction="#selectDataFile" style="-fx-text-fill:WHITE;-fx-background-color:#5264AE"
                        text="选择数据文件"/>
                <TextArea fx:id="batchDataFilePath" layoutX="114.0" layoutY="281.0" prefHeight="23.0"
                          prefWidth="373.0"/>
                <CheckBox fx:id="checkAsync" layoutX="1043.0" layoutY="7.0" mnemonicParsing="false" text="异步"/>
