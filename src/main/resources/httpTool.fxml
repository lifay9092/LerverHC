                          wrapText="true"/>
                <Label alignment="CENTER" layoutX="443.0" layoutY="315.0" prefHeight="25.0" prefWidth="53.0" text="参数"
                       textFill="#18b234"/>
                <TextArea fx:id="responseStr" editable="false" layoutX="507.0" layoutY="190.0" prefHeight="524.0"
                          prefWidth="650.0" wrapText="true"/>
                <Label layoutX="507.0" layoutY="160.0" prefHeight="22.0" prefWidth="43.0" text="状态:"/>
                <Label fx:id="httpStatus" layoutX="555.0" layoutY="160.0" prefHeight="22.0" prefWidth="87.0"/>
