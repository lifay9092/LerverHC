                <Label fx:id="batchFileExtLabel" layoutX="1091.0" layoutY="31.0" prefHeight="19.0" prefWidth="68.0"
                       text=".json"/>
                <Label layoutX="823.0" layoutY="160.0" prefHeight="22.0" prefWidth="66.0" text="当前时间:"/>
                <Label fx:id="nowTimeLabel" layoutX="889.0" layoutY="160.0" prefHeight="22.0" prefWidth="154.0"/>
                <Button layoutX="1044.0" layoutY="160.0" mnemonicParsing="false" onAction="#openOutputFolder"
                        style="-fx-text-fill:WHITE;-fx-background-color:#5264AE" text="打开输出目录"/>
                <TextArea fx:id="httpNameText" layoutX="5.0" layoutY="2.0" prefHeight="49.0" prefWidth="117.0"/>
                <Label fx:id="addrValue" layoutX="124.0" layoutY="30.0" prefHeight="22.0" prefWidth="178.0"/>
